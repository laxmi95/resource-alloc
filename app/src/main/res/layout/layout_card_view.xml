<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/newimg" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/alloc"
                android:layout_alignLeft="@+id/allocTo1"
                android:layout_alignStart="@+id/allocTo1"
                android:linksClickable="true"
                android:text="asset make"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/name"
                android:linksClickable="true"
                android:text="asset id"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/alloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorNewBlue"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allocTo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/alloc"
                android:layout_alignBottom="@+id/alloc"
                android:layout_centerHorizontal="true"
                android:text="emp name"
                android:textColor="#000"
                android:textSize="20dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
