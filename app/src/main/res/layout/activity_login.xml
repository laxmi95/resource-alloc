<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laxmi.assessmentproject.LoginActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="SUBMIT"
        android:textSize="20dp"
        android:background="@color/colorNewBlue"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/clr"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:textSize="20dp"
        android:text="CLEAR"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_weight="0.20"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/clr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:hint="enter pin (default - 5555)"
        android:textStyle="italic"
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machine Allocator"
        android:textColor="@color/colorNewBlue"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
